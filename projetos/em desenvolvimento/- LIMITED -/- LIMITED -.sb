  TextWindow.WriteLine("----------------------------------------")
  TextWindow.WriteLine(" ")
  ' Imprimindo detalhes
  TextWindow.WriteLine("Qual direção devo seguir?    /    Turnos: " + Turnos + "    /    Cordenada: X - " + X + " e Y - " + Y)
  TextWindow.WriteLine(" ")
  
  '=========================================
  
  ' CASO VOCÊ PERCA
  
