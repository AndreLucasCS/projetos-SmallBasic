' ÁREA DA MANIPULAÇÃO DAS CORDENADAS

' Defenifinindo as vareaveis
FimDeJogo = "No"
Level = 1
Turnos = 100000000
X = 0
Y = 0
S = 9

' Loop do jogo
While (FimDeJogo = "No")
  
  ' Selecionando a direção
  Direcao = TextWindow.Read()
  TextWindow.Clear()
  
  ' Imprimindo o titulo
  TextWindow.WriteLine(" ")
  TextWindow.WriteLine("- LIMITED -")
  TextWindow.WriteLine(" ")
  
  ' Caso queira ir para cima -----------------------------
  If Direcao = "w" Then
    
    ' Mudando a altura para ir para cima
    Y = Y-1
    
    ' Calculando a quantidade de espaço abaixo
    S = S+1
    
    ' Diminuindo a quantidade de turnos
    Turnos = Turnos-1
    
  EndIf
  
  ' Caso queira ir para baixo ------------------------------
  If Direcao = "s" Then
    
    ' Mudando a altura para ir para baixo
    Y = Y+1
    
    ' Calculando a quantidade de espaço abaixo
    S = S-1
    
    ' Diminuindo a quantidade de turnos
    Turnos = Turnos-1
    
  EndIf
  
  ' Caso queira ir para direita -----------------------------
  If Direcao = "d" Then
    
    ' Mudando o comprimento para ir para direita
    X = X+1
    
    ' Diminuindo a quantidade de turnos
    Turnos = Turnos-1
    
  EndIf
  
  ' Caso queira ir para esquerda -------------------------------
  If Direcao = "a" Then
    
    ' Mudando o Comprimento para ir para esquerda
    X = X-1
    
    ' Diminuindo a quantidade de turnos
    Turnos = Turnos-1
    
  EndIf
  
  ' =======================================
  
  '  ÁREA DA MOVIMENTAÇÃO
  
  ' Pulando linhas para se movimenta na cordenada Y
  For i = 0 To Y
    TextWindow.WriteLine(" ")
  EndFor
  
  ' Digitando espaços para se movimentar na cordenada X
  For j = 0 To X
    TextWindow.Write(" ")
  EndFor
  
  ' Imprimindo o personagem X
  TextWindow.WriteLine("X")
  
  '========================================
  
  ' IMPRIMINDO DETALHES LOCALIZADOS NA PARTE INFERIOR
  
  ' Pulando linhas para a impresão dos detalhes
  For k = 0 To S
    TextWindow.WriteLine(" ")
  EndFor
  
