    EndIf
    
    If Q = 3 Then
      F2 = F
      X2 = X
      Y2 = Y
      W2 = W
      H2 = H
      Color2 = Color
    EndIf
    
    If Q = 4 Then
      F3 = F
      X3 = X
      Y3 = Y
      W3 = W
      H3 = H
      Color3 = Color
    EndIf
    
    If Q = 5 Then
      F4 = F
      X4 = X
