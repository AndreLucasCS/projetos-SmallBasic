  EndIf
  
  If Y < 0 Then
    Y = 1
    GraphicsWindow.ShowMessage("Opa, não saia da janela", "Erro")
  EndIf
  
  If Y > GraphicsWindow.Height - 65 - H Then
    Y = 99
    GraphicsWindow.ShowMessage("Opa, não saia da janela", "Erro")
  EndIf
  
  If H < 2 Then
    H = 2
    GraphicsWindow.ShowMessage("Epa, isso tá muito fino", "Erro")
