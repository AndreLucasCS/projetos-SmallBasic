  EndIf
  
  If Q > 2 Then
    GraphicsWindow.PenWidth = F2
    GraphicsWindow.PenColor = Color2
    GraphicsWindow.DrawRectangle(X2, Y2, W2, H2)
  EndIf
  
  If Q > 3 Then
    GraphicsWindow.PenWidth = F3
    GraphicsWindow.PenColor = Color3
    GraphicsWindow.DrawRectangle(X3, Y3, W3, H3)
  EndIf
  
  If Q > 4 Then
    GraphicsWindow.PenWidth = F4
    GraphicsWindow.PenColor = Color4
