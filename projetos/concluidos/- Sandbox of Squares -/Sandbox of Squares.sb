  EndIf
  
  If Q > 6 Then
    GraphicsWindow.PenWidth = F6
    GraphicsWindow.PenColor = Color6
    GraphicsWindow.DrawRectangle(X6, Y6, W6, H6)
  EndIf
  
  ' ==============================
  
  GraphicsWindow.PenWidth = F
  GraphicsWindow.PenColor = Color
  GraphicsWindow.DrawRectangle(X, Y, W, H)
  
